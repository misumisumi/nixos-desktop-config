# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.c]
indent_size = 2

[*.cpp]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.java]
indent_size = 2

[*.js]
indent_size = 2

[*.nix]
indent_size = 2

[*.md]
indent_size = 2

[*.sh]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.raml]
indent_size = 2