charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.c]
